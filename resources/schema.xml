                <type>VARCHAR(100)</type>
            </column>
            <column>
                <name>hire_date</name>
                <type>DATE</type>
            </column>
        </columns>
        <relationships>
            <relationship>
                <relationshipType>one-to-many</relationshipType>
                <relatedTable>course</relatedTable>
                <foreignKey>instructor_id</foreignKey>
                <relatedForeignKey>instructor_id</relatedForeignKey>
            </relationship>
        </relationships>
    </table>

    <table>
        <tableName>course</tableName>
        <columns>
            <column>
                <name>course_id</name>
                <type>INT</type>
            </column>
            <column>
                <name>course_name</name>
                <type>VARCHAR(100)</type>
            </column>
            <column>
                <name>credits</name>
                <type>INT</type>
            </column>
            <column>
                <name>instructor_id</name>
                <type>INT</type>
            </column>
        </columns>
        <relationships>
            <relationship>
                <relationshipType>many-to-many</relationshipType>
                <relatedTable>student</relatedTable>
                <throughTable>enrollment</throughTable>
                <foreignKey>course_id</foreignKey>
                <relatedForeignKey>student_id</relatedForeignKey>
            </relationship>
            <relationship>
                <relationshipType>many-to-one</relationshipType>
                <relatedTable>instructor</relatedTable>
                <foreignKey>instructor_id</foreignKey>
                <relatedForeignKey>instructor_id</relatedForeignKey>
            </relationship>
        </relationships>
    </table>

    <table>
        <tableName>enrollment</tableName>
