<database>
    <table>
        <tableName>student</tableName>
        <columns>
            <column>
                <name>student_id</name>
                <type>INT</type>
            </column>
            <column>
                <name>first_name</name>
                <type>VARCHAR(100)</type>
            </column>
            <column>
                <name>last_name</name>
                <type>VARCHAR(100)</type>
            </column>
            <column>
                <name>email</name>
                <type>VARCHAR(100)</type>
            </column>
            <column>
                <name>enrollment_date</name>
                <type>DATE</type>
            </column>
        </columns>
        <relationships>
            <relationship>
                <relationshipType>many-to-many</relationshipType>
                <relatedTable>course</relatedTable>
                <throughTable>enrollment</throughTable>
                <foreignKey>student_id</foreignKey>
                <relatedForeignKey>course_id</relatedForeignKey>
            </relationship>
        </relationships>
    </table>

