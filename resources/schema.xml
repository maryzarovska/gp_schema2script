            </column>
        </columns>
        <relationships>
            <relationship>
                <relationshipType>many-to-one</relationshipType>
                <relatedTable>student</relatedTable>
                <foreignKey>student_id</foreignKey>
                <relatedForeignKey>student_id</relatedForeignKey>
            </relationship>
            <relationship>
                <relationshipType>many-to-one</relationshipType>
                <relatedTable>course</relatedTable>
                <foreignKey>course_id</foreignKey>
                <relatedForeignKey>course_id</relatedForeignKey>
            </relationship>
        </relationships>
    </table>
</database>
